@model DAL.Entities.tbl_timetable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_teacherLayout.cshtml";

}

<div class="container-fluid">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <div class="header headerborder">
                    <h4 class="title" style="margin-left:20px">
                        Add Timetable
                      
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-offset-2">
                <div>
                    @if (ViewBag.msg != null)
                    {
                        <h1 style="color:red">@ViewBag.msg</h1>
                    }
                </div>
                <div class="content" style="margin:3% !important;">
                    @using (Html.BeginForm("CreateTimetable", "Teacher", FormMethod.Post,
                                      new { enctype = "multipart/form-data", @data_ajax = "false" }))
                    {


                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Day
                            </label>


                            @*@Html.TextBoxFor(x => x.nameofday, new { @class = "form-control", @placeholder = "Day", required = "required" })*@
                            @Html.DropDownListFor(x => x.nameofday, GetDaysOfWeekList(), "Select Day", new { @class = "form-control", required = "required" })

                            @Html.ValidationMessageFor(x => x.nameofday, "", new { @class = "text-danger" })
                        </div>
                        @functions
                        {
                            private List<SelectListItem> GetDaysOfWeekList()
                            {
                                var daysOfWeek = new List<SelectListItem>
                                {
                                    new SelectListItem { Value = "Monday", Text = "Monday" },
                                    new SelectListItem { Value = "Tuesday", Text = "Tuesday" },
                                    new SelectListItem { Value = "Wednesday", Text = "Wednesday" },
                                    new SelectListItem { Value = "Thursday", Text = "Thursday" },
                                    new SelectListItem { Value = "Friday", Text = "Friday" },
                                    new SelectListItem { Value = "Saturday", Text = "Saturday" },
                                    new SelectListItem { Value = "Sunday", Text = "Sunday" }
                                };

                                    return daysOfWeek;
                            }
                        }
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Period
                            </label>

                            @Html.TextBoxFor(x => x.periodnumber, new { @class = "form-control", @placeholder = "Period", required = "required" })

                            @Html.ValidationMessageFor(x => x.periodnumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Subject
                            </label>

                            @Html.TextBoxFor(x => x.fksubjectid, new { @class = "form-control", @placeholder = "Subject", required = "required" })

                            @Html.ValidationMessageFor(x => x.fksubjectid, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Class
                            </label>

                            @Html.TextBoxFor(x => x.fkclassid, new { @class = "form-control", @placeholder = "Class", required = "required" })

                            @Html.ValidationMessageFor(x => x.fkclassid, "", new { @class = "text-danger" })
                        </div>





                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <input id="send" type="submit" class="btn btn-success" value="Submit">
                                <a href="@Url.Action("Timetable","Teacher")" class="btn btn-primary">Cancel</a>

                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>