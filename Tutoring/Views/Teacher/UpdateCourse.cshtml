@model DAL.Entities.tbl_course
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_teacherLayout.cshtml";

}

<div class="container-fluid">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <div class="header headerborder">
                    <h4 class="title" style="margin-left:20px">
                        Update Course
                      
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-offset-2">
                <div>
                    @if (ViewBag.msg != null)
                    {
                        <h1 style="color:red">@ViewBag.msg</h1>
                    }
                </div>
                <div class="content" style="margin:3% !important;">
                    @using (Html.BeginForm("UpdateCourse", "Teacher", FormMethod.Post, 
                        new { enctype = "multipart/form-data", @data_ajax = "false" }))
                    {
                        <div class="form-group" style="display:none">

                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.courseid, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Course Name
                            </label>

                            @Html.TextBoxFor(x => x.coursename, new { @class = "form-control", @placeholder = "Course Name", required = "required" })

                            @Html.ValidationMessageFor(x => x.coursename, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Duration
                            </label>

                            @Html.TextBoxFor(x => x.duration, new { @class = "form-control", @placeholder = "Duration", required = "required" })

                            @Html.ValidationMessageFor(x => x.duration, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Course Fee
                            </label>

                            @Html.TextBoxFor(x => x.coursefee, new { @class = "form-control", @placeholder = "Course Fee", required = "required" })

                            @Html.ValidationMessageFor(x => x.coursefee, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Course Desc
                            </label>

                            @Html.TextBoxFor(x => x.course_desc, new { @class = "form-control", @placeholder = "Course Desc", required = "required" })

                            @Html.ValidationMessageFor(x => x.course_desc, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Start Date
                            </label>

                            @Html.TextBoxFor(x => x.startdate, new { @class = "form-control", @placeholder = "Start Date", required = "required" })

                            @Html.ValidationMessageFor(x => x.startdate, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group" style="display:none">
                            <label class="control-label" style="padding-bottom:10px;">
                                Topic
                            </label>

                            @Html.TextBoxFor(x => x.fk_coursetopicid, new { @class = "form-control", @placeholder = "Topic ", required = "required" })

                            @Html.ValidationMessageFor(x => x.fk_coursetopicid, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <input id="send" type="submit" class="btn btn-success" value="Submit">
                                <a href="@Url.Action("Course","Teacher")" class="btn btn-primary">Cancel</a>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>