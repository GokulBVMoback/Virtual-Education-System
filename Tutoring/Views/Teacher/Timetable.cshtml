@model DAL.Entities.Timetableview
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_teacherLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Timetable</h3><br /><br />
        @if (BLL.Helpers.Config.User.fkschoolID==0)
        {
            <a href="@Url.Action("CreateTimetable","Teacher")" class="create">
                Create
            </a>
        }

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Period</th>
                    <th>Subject Name</th>
                    <!-- <th>Teacher</th>-->
                    <th>Class</th>
                    <th>Section</th>
                    <th></th>
                  




                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Timetable)
                {
                <tr>
                    <td>@item.nameofday</td>
                    <td>@item.periodnumber</td>
                    <td>@item.subjectname</td>
                    <!--<td>@item.firstname</td>-->
                    <td>@item.classname</td>
                    <td>@item.section</td>
                    <td><a href="https://demo.bigbluebutton.org/rooms/mly-le2-xoy-6sy/join" target="_blank" class="btn btn-primary">Go Live</a> </td>

                  


                </tr>
                }

        </table>
    </div>
    <!-- /.card-body -->
</div>