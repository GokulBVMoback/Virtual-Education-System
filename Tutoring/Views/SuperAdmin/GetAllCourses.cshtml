@model IEnumerable<DAL.Entities.tbl_course>

@{
    ViewBag.Title = "GetAllCourses";
    Layout = "~/Views/Shared/_superAdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">All Courses</h3><br /><br />
        <a href="@Url.Action("CreateCourse","SuperAdmin")" class="create">
            Create
        </a>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.coursename)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.coursefee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.course_desc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.startdate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fk_coursetopicid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cr_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fkuserid)
                    </th>
                    <th>Operation</th>
                </tr>
                </thead>
            <tbody>

                @foreach (var item in ViewBag.data)
                {
                    <tr>
                        <td>
                            @item.coursename
                        </td>
                        <td>
                            @item.duration
                        </td>
                        <td>
                            @item.coursefee
                        </td>
                        <td>
                            @item.course_desc
                        </td>
                        <td>
                            @item.startdate
                        </td>
                        <td>
                            @item.fk_coursetopicid
                        </td>
                        <td>
                            @item.cr_date
                        </td>
                        <td>
                            @item.fkuserid
                        </td>
                        <td>
                            <a href="@Url.Action("GetCourses", new { classid = item.courseid })" class="update">
                                Details
                            </a>
                        </td>
                    </tr>
                }

        </table>
        </div>
</div>