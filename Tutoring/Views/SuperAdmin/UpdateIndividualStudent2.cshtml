@model DAL.Entities.tbl_student

@{
    ViewBag.Title = "UpdateIndividualStudent2";
    Layout = "~/Views/Shared/_superAdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <div class="header headerborder">
                    <h4 class="title" style="margin-left:20px">
                        Update School
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-offset-2">
                <div>
                    @if (ViewBag.msg != null)
                    {
                        <h1 style="color:red">@ViewBag.msg</h1>
                    }
                </div>
                <div class="content" style="margin:3% !important;">
                    @using (Html.BeginForm("UpdateIndividualStudent2", "SuperAdmin", FormMethod.Post, new { enctype = "multipart/form-data", @data_ajax = "false" }))
                    {
                        <div class="form-group" style="display:none">

                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.studentid, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Father Name
                            </label>

                            @Html.TextBoxFor(x => x.fathername, new { @class = "form-control", @placeholder = "Father Name", required = "required" })

                            @Html.ValidationMessageFor(x => x.fathername, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Mother Name
                            </label>

                            @Html.TextBoxFor(x => x.mothername, new { @class = "form-control", @placeholder = "Mother Name", required = "required" })

                            @Html.ValidationMessageFor(x => x.mothername, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                School ID
                            </label>

                            @Html.TextBoxFor(x => x.fkschoolid, new { @class = "form-control", @placeholder = "School ID", required = "required" })

                            @Html.ValidationMessageFor(x => x.fkschoolid, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Class Id
                            </label>

                            @Html.TextBoxFor(x => x.fkclassid, new { @class = "form-control", @placeholder = "Class ID", required = "required" })

                            @Html.ValidationMessageFor(x => x.fkclassid, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <input id="send" type="submit" class="btn btn-success" value="Submit">
                                <a href="@Url.Action("GetAllSchool","SuperAdmin")" class="btn btn-primary">Cancel</a>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>