@model IEnumerable<BLL.Models.UserView>

@{
    ViewBag.Title = "GetAllUsers";
    Layout = "~/Views/Shared/_superAdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">All Users</h3><br /><br />
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        User Image
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        User Type
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Contact
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Country
                    </th>
                    <th>
                        Pin
                    </th>
                    <th>
                        School Name
                    </th>
                    <th>
                        Active Status
                    </th>
                    <th>
                        Sex
                    </th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.data)
                {
                    <tr>
                        <td>
                            <img src="../../@item.userimage" height="50" />
                        </td>
                        <td>
                            @item.email
                        </td>
                        <td>
                            @item.pass
                        </td>
                        @if (item.usertype == 1)
                        {
                            <td>
                                Super Admin
                            </td>
                        }
                        else if (item.usertype == 2)
                        {
                            <td>
                                School
                            </td>
                        }
                        else if (item.usertype == 3)
                        {
                            <td>
                                Teacher
                            </td>
                        }
                        else if (item.usertype == 4)
                        {
                            <td>
                                Student
                            </td>
                        }
                        <td>
                            @item.firstname
                        </td>
                        <td>
                            @item.lastname
                        </td>
                        <td>
                            @item.contact
                        </td>
                        <td>
                            @item.address
                        </td>
                        <td>
                            @item.city
                        </td>
                        <td>
                            @item.state
                        </td>
                        <td>
                            @item.country
                        </td>
                        <td>
                            @item.pin
                        </td>
                        <td>
                            @item.SchoolName
                        </td>
                        <td>
                            @item.isactive
                        </td>
                        <td>
                            @item.sex
                        </td>
                        <td>
                            <a href="@Url.Action("UpdateUser", new { userid = item.userid })" class="update">
                                Update
                            </a>
                            @if (item.isactive == true)
                             {
                                <a href="@Url.Action("ChangeUserActiveStatus", new { userid = item.userid })" class="update">                                    
                                    Inactive
                                </a>
                             }
                            else if (item.isactive == false)
                            {
                                <a href="@Url.Action("ChangeUserActiveStatus", new { userid = item.userid })" class="update">
                                    Active
                                </a>
                            }
                            <a href="@Url.Action("DeleteUser", new { userid = item.userid })" class="delete" onclick="return confirm('Are you sure you wish to delete? This record will no longer exsists.');">
                                    Delete
                                </a>
                            </td>
                    </tr>
                }

        </table>
    </div>
</div>