@model DAL.Entities.tbl_class
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_schoolLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <div class="header headerborder">
                    <h4 class="title" style="margin-left:20px">
                        Update Class
                      
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-offset-2">
                <div>
                    @if (ViewBag.msg != null)
                    {
                        <h1 style="color:red">@ViewBag.msg</h1>
                    }
                </div>
                <div class="content" style="margin:3% !important;">
                    @using (Html.BeginForm("UpdateClass", "School", FormMethod.Post, new { enctype = "multipart/form-data", @data_ajax = "false" }))
                    {
                        <div class="form-group" style="display:none">

                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.classid, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                      
                        
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                               Class Name
                            </label>

                            
                            @Html.TextBoxFor(x => x.classname, new { @class = "form-control", @placeholder = "ClassName", required = "required" })

                            @Html.ValidationMessageFor(x => x.classname, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Section
                            </label>

                            @Html.TextBoxFor(x => x.section, new { @class = "form-control", @placeholder = "Section", required = "required" })

                            @Html.ValidationMessageFor(x => x.section, "", new { @class = "text-danger" })
                        </div>
                        

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <input id="send" type="submit" class="btn btn-success" value="Submit">
                                <a href="@Url.Action("ClassMastaer","School")" class="btn btn-primary">Cancel</a>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>