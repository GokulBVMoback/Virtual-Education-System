@model DAL.Entities.changepassword
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_schoolLayout.cshtml";
}
<script type="text/javascript">
    function validateForm() {
        var password = document.getElementById("newpassword");
        if (password.value == "") {
            alert("Password must be filled out");
            return false;
        }
    }
</script>
<div class="container-fluid">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <div class="header headerborder">
                    <h4 class="title" style="margin-left:20px">
                        Change Password
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-offset-2">
                <div>
                    @if (ViewBag.msg != null)
                    {
                        <h1 style="color:red">@ViewBag.msg</h1>
                    }
                </div>
                <div class="content" style="margin:3% !important;">
                    @using (Html.BeginForm("ChangePassword", "School", FormMethod.Post, new { enctype = "multipart/form-data", @data_ajax = "false" }))
                    {
                        <div class="form-group" style="display:none">
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Old Password
                            </label>
                            @Html.TextBoxFor(x => x.OldPassword, new { @id = "oldpassword", @class = "form-control", @placeholder = "Old Password", required = "required" })
                            @Html.ValidationMessageFor(x => x.OldPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                New Password
                            </label>
                            @Html.TextBoxFor(x => x.NewPassword, new { @id = "newpassword", @class = "form-control", @placeholder = "New Password", required = "required" })
                            @Html.ValidationMessageFor(x => x.NewPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <input id="send" type="submit" class="btn btn-success" value="Submit" onclick="return validateForm()">
                                <a href="@Url.Action("Index","School")" class="btn btn-primary">Cancel</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>







