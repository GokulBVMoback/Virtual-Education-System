@model DAL.Entities.tbl_timetable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_schoolLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <div class="header headerborder">
                    <h4 class="title" style="margin-left:20px">
                        Add Timetable  
                      
                    </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-offset-2">
                <div>
                    @if (ViewBag.msg != null)
                    {
                        <h1 style="color:red">@ViewBag.msg</h1>
                    }
                </div>
                <div class="content" style="margin:3% !important;">
                    @using (Html.BeginForm("CreateTimetable", "School", FormMethod.Post,
                                      new { enctype = "multipart/form-data", @data_ajax = "false" }))
                    {

                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Name of the day
                            </label>

                            @Html.TextBoxFor(x => x.nameofday, new { @class = "form-control", @placeholder = "Name of the day", required = "required" })

                            @Html.ValidationMessageFor(x => x.nameofday, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Period Number
                            </label>

                            @Html.TextBoxFor(x => x.periodnumber, new { @class = "form-control", @placeholder = "Period Number", required = "required" })

                            @Html.ValidationMessageFor(x => x.periodnumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Teacher 
                            </label>
                            <select id="mainFilterDropdown" class="form-control" name="fkteacherid" required>
                                @foreach (var item in ViewBag.t)
                                {
                                    <option value="@item.userid">@item.firstname <span>-</span> @item.lastname</option>
                                }


                            </select>

                        </div>



                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Class
                            </label>
                            <select id="mainFilterDropdown" class="form-control" name="fkclassid" required>
                                @foreach (var item in ViewBag.c)
                                {
                                    <option value="@item.classid">@item.classname <span>-</span> @item.section</option>
                                }


                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label" style="padding-bottom:10px;">
                                Subject
                            </label>

                            <select id="mainFilterDropdown" class="form-control" name="fksubjectid" required>
                                @foreach (var item in ViewBag.s)
                                {
                                    <option value="@item.subjectid">@item.subjectname</option>
                                }


                            </select>
                        </div>


                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <input id="send" type="submit" class="btn btn-success" value="Submit">
                                <a href="@Url.Action("TimetableMaster","School")" class="btn btn-primary">Cancel</a>

                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>