@model DAL.Entities.tbl_users
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_schoolLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Students</h3><br /><br />
        <a href="@Url.Action("CreateStudent","School")" class="create">
            Create
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>first Name</th>
                    <th>Last Name</th>
                    <th>Contact</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>State</th>
                    <th>Country</th>
                    <th>Pincode</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.data)
                {
                    <tr>
                        <td>@item.firstname</td>
                        <td>@item.lastname</td>
                        <td>@item.contact</td>
                        <td>@item.address</td>
                        <td>@item.email</td>
                        <td>@item.state</td>
                        <td>@item.country</td>
                        <td>@item.pin</td>
                        <td>
                            <a href="@Url.Action("UpdateStudent", new { userid = item.userid })" class="update">
                                Update
                            </a>
                            <a href="@Url.Action("DeleteStudent", new { userid = item.userid })" class="delete" onclick="return confirm('Are you sure you wish to delete? This record will no longer exsists.');">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
        </table>
    </div>
    <!-- /.card-body -->
</div>