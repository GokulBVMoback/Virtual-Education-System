@model BLL.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="col-md-12">
    <div class="col-md-4 col-md-offset-4 SLbox">
        <div class="col-md-12 LoginTop">
            <img src="~/Images/logo1.png" />
            <h2>Login</h2>
            <div>
                @if(ViewBag.msg !=null)
            {
                <h1 style="color:red">@ViewBag.msg</h1>
            }
            </div>
        </div>
        <div class="col-md-12">
            @using (Html.BeginForm("Login", "Home", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group has-feedback">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group has-feedback">
                        <div class="col-md-12">
                          
                            @Html.PasswordFor(m => m.Password, new
                          {
                           @class = "form-control transparent_input",
                              type = "Password",
                           id = "Password",
                           name = "Password",
                           placeholder = "Password",
                           @required = ""

                           })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <span onclick="passwordToggle('Password')" class="fa fa-fw fa-eye-slash eye_icon toggle-password" style="
    float: right;
    margin-top: -27px;
    margin-right: 9px;
"></span>

                        </div>
                    </div>
                    <div class="col-xs-12">
                        <div class="col-xs-6">

                        </div>
                        <!-- /.col -->
                        <div class="col-xs-6">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </div>
            }
        </div>
        <div class="col-md-12 LoginFS">
            <a href="@Url.Action("ForgetPassword","Account")">Forgot Password?</a>
        </div>
        <div class="col-md-12 nopadding Sslogin" style="display:none">
            <div class="col-md-6">
                <a href="javascript:void(0)" onclick="facebookLogin()">
                    <img src="~/Content/Front/frontimg/SocialLogin1.png" />
                </a>
            </div>
            <div class="col-md-6">
                @*<a href="javascript:void(0)" class="g-signin2" data-onsuccess="onSignIn" data-theme="dark">
                    </a>*@
                <a href="javascript:void(0)" onclick="login();">
                    <img src="~/Content/Front/frontimg/SocialLogin2.png" />
                </a>

            </div>
        </div>
        <div class="col-md-12 nopadding SwpipeLogin">
            <a href="@Url.Action("Signup")">Dont have Account? Sign Up here</a>
        </div>
    </div>
</div>
