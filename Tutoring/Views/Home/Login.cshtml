@model BLL.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<section class="contact py-5" id="contact">
    <div class="container py-md-4 py-3">
        <div class="container-fluid">
            <div class="card">
              
               


                <div  class="content" style="margin:3% !important;">
                    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="form-horizontal" style="padding: 0 30%;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            @if (ViewBag.msg != null)
                            {
                                <h5 style="color:red">@ViewBag.msg</h5>
                            }
                        </div>


                        <div class="form-group has-feedback">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="header headerborder">
                                        <h4 class="title" style="margin-left:20px">
                                            Login

                                        </h4>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            <div class="col-md-12">

                                @Html.PasswordFor(m => m.Password, new
                              {
                               @class = "form-control transparent_input",
                                  type = "Password",
                               id = "Password",
                               name = "Password",
                               placeholder = "Password",
                               @required = ""

                               })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                <span onclick="passwordToggle('Password')" class="fa fa-fw fa-eye-slash eye_icon toggle-password" style="
    float: right;
    margin-top: -27px;
    margin-right: 9px;
"></span>

                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="col-xs-6">

                            </div>
                            <!-- /.col -->
                            <div class="col-xs-6">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </div>
                    }
                </div>


            </div>
</section>
